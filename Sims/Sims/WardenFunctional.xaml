        <Button Content="Create room" HorizontalAlignment="Left" Margin="79,130,0,0" VerticalAlignment="Top" Click="Create_Click"/>
        <Button Content="Update room" HorizontalAlignment="Left" Margin="79,205,0,0" VerticalAlignment="Top" Click="Update_Click"/>
        <Button Content="Delete room" HorizontalAlignment="Left" Margin="66,269,0,0" VerticalAlignment="Top" Click="Delete_Click"/>
